    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Apontamento/bin/Debug/net6.0/Apontamento.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Apontamento",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5001;https://localhost:5002",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
            // ,
            // "linux": {
            //     "env": {
            //         "ASPNETCORE_Kestrel__Certificates__Default__Password": "",
            //         "ASPNETCORE_Kestrel__Certificates__Default__Path": "${env:HOME}/.aspnet/https/localhost.pfx"
            //     }
            // }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
