{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Apontamento/bin/Debug/net6.0/Apontamento.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Apontamento",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://+:5001;https://+:5002",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "linux": {
                "env": {
                    "ConnectionStrings__DefaultConnection": "Server=localhost,6433;Database=aspnet-Apontamento;User Id=sa;Password=yourStrongPassword!"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}